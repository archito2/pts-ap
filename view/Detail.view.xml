<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout" 
	xmlns="sap.m" controllerName="com.dolphin.controller.Detail" 
	xmlns:html="http://www.w3.org/1999/xhtml" class="sapUiSizeCompact">
	<App>
		<pages>
			<Page title="Hitlist" showHeader= "false">
				<content>
					<l:ResponsiveSplitter defaultPane="default">
						<l:PaneContainer>
							<l:SplitPane requiredParentWidth="400" id="default">
								<Panel height="100%">
									<IconTabBar id="idHeadIconTabBar" select="handleIconTabBarSelect" class="sapUiResponsiveContentPadding">
										<items>
											<IconTabFilter icon="sap-icon://header" text="Header" key="Ok">
												<content>
													<core:Fragment fragmentName="com.dolphin.view.fragment.HeaderDetails" type="XML"/>
												</content>
											</IconTabFilter>
											<IconTabFilter icon="sap-icon://employee-approvals" text="Approvers" key="Ok">
												<content>
													<core:Fragment fragmentName="com.dolphin.view.fragment.Approvers" type="XML"/>
												</content>
											</IconTabFilter>
											<IconTabFilter icon="sap-icon://comment" text="Comments" key="Ok">
												<content>
													<core:Fragment fragmentName="com.dolphin.view.fragment.Notes" type="XML"/>
												</content>
											</IconTabFilter>
										</items>
									</IconTabBar>
									<IconTabBar id="idItemIconTabBar" select="handleIconTabBarSelect" class="sapUiResponsiveContentPadding">
										<items>
											<IconTabFilter id="idIconTabFilterItems" icon="sap-icon://begin" text="Items" key="Ok">
												<content>
													<core:Fragment fragmentName="com.dolphin.view.fragment.Items" type="XML"/>
												</content>
											</IconTabFilter>
										</items>
									</IconTabBar>
								</Panel>
							</l:SplitPane>
							<l:SplitPane  requiredParentWidth="400" id="default1">
								<Panel height="100%">
								<!-- //PDF goes here -->
								<!-- <core:HTML 
									content =
									"<iframe frameborder=&quot;1&quot;
										style=&quot;overflow: hidden; height: 100%; width: 100%; position: absolute;&quot;
										height=&quot;100%&quot; width=&quot;100%&quot;
										src=""{viewModel>/Tracks/URI}""></iframe>">
								</core:HTML> -->

								 <core:HTML 
								 	content = "{parts:['viewModel>/Tracks/URI'],formatter:'.formatURL'}">
								</core:HTML>  
								</Panel>
							</l:SplitPane>
						</l:PaneContainer>
					</l:ResponsiveSplitter>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>