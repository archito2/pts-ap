<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    <MessagePopover items="{messages>/}">
        <MessagePopoverItem 
            type="{path : 'messages>severity',formatter : '._getErrorString'}" 
            title="{path : 'messages>message',formatter : '._getErrorString'} message(s)"
            subtitle="Click for more"
            description="{messages>message}">
        </MessagePopoverItem>
    </MessagePopover>
</core:FragmentDefinition>
