<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core" 
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table id="idApproversTable" inset="false" items="{ path: 'viewModel>/Approvers/results'}">
		<headerToolbar>
			<Toolbar>
				<!-- <Title text="Items" level="H2"/> -->
				<ToolbarSpacer/>
				<!-- <Button text="Manager" icon="sap-icon://î‚¾" press="handleAddManger"/><Button enabled = "{configModel>/rowSelected}" text="Reviewer" icon="sap-icon://add-employee" press="handleCopyItem"/> -->
				<MenuButton icon="sap-icon://employee-approvals" text="Approver" buttonMode="Split" defaultAction="handleAddManger">
					<menu>
						<Menu itemSelected="handleApprovalMenuAction">
							<items>
								<MenuItem text="My Manager" icon="sap-icon://manager"/>
								<MenuItem text="Reviewer" icon="sap-icon://employee-lookup"/>
							</items>
						</Menu>
					</menu>
				</MenuButton>
				<Input width="10%" visible="{=${viewModel>/WebStatus/WEB_ER_HIDE_PHXUSER}!=='X'&amp;&amp;${viewModel>/UIModel/CreateMode}}" value="{viewModel>/Tracks/User}" showValueHelp="true" app:ovsService="UserListSet" app:ovsIdField="Xuser" app:ovsDescField="Fname" app:ovsTitle="Select a Company Code" valueHelpRequest="handleValueHelp"/>
				<Button enabled = "{configModel>/rowSelected}" text="Delete" icon="sap-icon://delete" press="handleDeleteItem"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Approver ID"/>
			</Column>
			<Column>
				<Text text="Decision"/>
			</Column>
			<Column>
				<Text text="Current"/>
			</Column>
			<Column>
				<Text text="Sequnce"/>
			</Column>
			<Column>
				<Text text="Approver Name"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text text="{viewModel>ApproverID}"/>
					<Text text="{viewModel>Decision}"/>
					<Text text="{viewModel>Curr}"/>
					<Text text="{viewModel>Seq}"/>
					<Text text="{viewModel>ApproverName}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>